<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#1a1a1a">

    <!-- Title -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morse Code Torch Converter"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

    <!-- Input Text -->
    <EditText
            android:id="@+id/inputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter text here"
            android:textColorHint="@color/light_gray"
            android:textColor="@color/white"
            android:backgroundTint="@color/light_gray"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

    <!-- Convert Button -->
    <Button
            android:id="@+id/convertButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert to Morse Code"
            android:textColor="@color/white"
            android:background="@color/purple_200"
            android:layout_marginBottom="16dp"/>

    <!-- Morse Code Text -->
    <TextView
            android:id="@+id/morseCodeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"/>

    <!-- Torch Button -->
    <Button
            android:id="@+id/torchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toggle Morse Torch"
            android:textColor="@color/white"
            android:background="@color/purple_200"
            android:layout_marginBottom="16dp"/>

    <!-- Instructions -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1) Enter text. 2)press Convert. 3) Toggle Morse Torch for automatic light translation"
            android:textColor="@color/light_gray"
            android:layout_gravity="center_horizontal"/>

    <!-- TextView to display a heading -->
    <TextView
            android:id="@+id/idTVHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Status:"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    <!-- TextView to display a message -->
    <TextView
            android:id="@+id/idTVMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVHeading"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:gravity="center"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
</LinearLayout>



